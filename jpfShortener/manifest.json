{

  "manifest_version": 2,
  "name": "jpfShortener",
  "version": "1.0",

  "description": "Encurta urls.",
  "browser_action": {
    "default_title": "jpfShortener",
    "default_popup": "menu/menu.html"
  },

  "icons": {
    "48": "icons/48.png"
  },

  "permissions": [
    "tabs", 
    "<all_urls>"
  ],

  "background": {
    "scripts": ["jpfShortener.js"]
  }

}